/// SCRIPTS DO BANCO

CREATE DATABASE IF NOT EXISTS DBprojeto; 

/// CONFIRMANDO CRIANÇÃO

SHOW DATABASES;

/// SELECIONANDO DBprojeto

USE DBprojeto;

/// CRIANDO TABELAS

CREATE TABLE IF NOT EXISTS projetos (
    IDprojeto SMALLINT PRIMARY KEY AUTO_INCREMENT,
    nomeProjeto VARCHAR(100) NOT NULL,
    dataInicio DATE NOT NULL,
    dataTermino DATE NOT NULL,
    valorProjeto FLOAT NOT NULL
);